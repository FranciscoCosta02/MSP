<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<display-name>NOVA-SST</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>MainServices</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>resources</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.provider.scanning.recursive</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.servlet.filter.contextPath</param-name>
			<param-value>/rest/*</param-value>
		</init-param>

		<init-param>
			<param-name>jersey.config.server.tracing.type</param-name>
			<param-value>ALL</param-value> <!-- This is a debug utility that should be disabled when code goes to production -->
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>servlet-userStorage</servlet-name>
		<servlet-class>servlets.MediaResourceUserPhotosServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>servlet-activitiesStorage</servlet-name>
		<servlet-class>servlets.MediaResourceActivitiesPhotosServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>servlet-userStorage</servlet-name>
		<url-pattern>/gcs/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>servlet-activitiesStorage</servlet-name>
		<url-pattern>/act/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MainServices</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<filter-mapping>
		<filter-name>CorsFilter</filter-name>
		<url-pattern>/rest/*</url-pattern>
		<url-pattern>/gcs/*</url-pattern>
		<url-pattern>/act/*</url-pattern>
	</filter-mapping>
	

</web-app>